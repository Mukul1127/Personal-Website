import "@/styles/fonts.css";

import { ClientRouter } from "astro:transitions";

import favicon from "@/assets/favicon.svg";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en" data-theme="mukuls" data-dark="true">
