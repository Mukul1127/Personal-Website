import Nav from "@/components/Nav.astro";
import Layout from "@/layouts/Default.astro";

import LanguageCard from "@/components/LanguageCard.astro";
import ProjectCard from "@/components/ProjectCard.astro";
---

<Layout title="Home">
  <Nav />
  <main class="grid place-items-center gap-4 p-8 lg:grid-flow-col">
    <div class="flex flex-col sm:flex-row sm:gap-12 lg:flex-col lg:gap-0">
      <i class="fa-solid fa-laptop-binary size-60 text-black dark:text-white"></i>
      <div class="space-y-1 font-bold sm:mt-6 lg:mt-0">
        <h1 class="flex text-4xl text-black dark:text-white">
          Hi, I'm&nbsp;<span class="text-accent">Mukul</span>
        </h1>
        <h2 class="md:text-xl">A Self-Taught Developer</h2>
        <br />
        <a class="flex items-center gap-2">
          <i class="fa-regular fa-location-crosshairs"></i>
          Michigan, US
        </a>
        <a class="flex items-center gap-2">
          <i class="fa-regular fa-clock"></i>
          UTC - 4:00
        </a>
        <a class="flex items-center gap-2">
          <i class="fa-regular fa-envelope"></i>
          mukul@mookul.dev
        </a>
      </div>
    </div>

    <div class="grid gap-4 sm:grid-flow-col">
      <div class="flex flex-col gap-2">
        <LanguageCard icon="HTML" name="HTML" label="Proficient" percentage={95} />
        <LanguageCard icon="CSS" name="CSS" label="Proficient" percentage={95} />
        <LanguageCard icon="JavaScript" name="Javascript" label="Proficient" percentage={95} />
        <LanguageCard icon="TypeScript" name="Typescript" label="Proficient" percentage={95} />
        <LanguageCard icon="Java-Dark" name="Java" label="Proficient" percentage={95} />
        <LanguageCard icon="Kotlin-Dark" name="Kotlin" label="Proficient" percentage={95} />
        <LanguageCard icon="Python-Dark" name="Python" label="Proficient" percentage={95} />
        <LanguageCard icon="C" name="C" label="Learning" percentage={75} />
        <LanguageCard icon="CS" name="C#" label="Learning" percentage={75} />
        <LanguageCard icon="CPP" name="C++" label="Learning" percentage={75} />
        <LanguageCard icon="Zig-Dark" name="Zig" label="Learning" percentage={75} />
      </div>
      <div class="flex flex-col gap-2">
        <ProjectCard name="MeteoNow" description="A weather app made with the Open-Meteo API" year="2023" url="//meteonow.mookul.dev" />
        <ProjectCard name="More Soon!" description="I'll be working on more soon enough :)" year="Future" />
      </div>
    </div>
  </main>
</Layout>
