export const prerender = false;

const show404 = Astro.url.searchParams.get("code") === null && Astro.url.searchParams.get("name") === null && Astro.url.searchParams.get("message") === null;

import Layout from "@/layouts/Code.astro";
---

{
  show404 ?
    <Layout code="404" name={"Not Found"} message={"Sorry, we couldn't find the page you're looking for."} />
  : <Layout code={Astro.url.searchParams.get("code") || ""} name={Astro.url.searchParams.get("name") || ""} message={Astro.url.searchParams.get("message") || ""} />
}
