import Layout from "@/layouts/Layout.astro";

import ThemeChanger from "@/components/Themes.astro";
---

<Layout title="404 Not Found">
  <main class="grid h-screen place-items-center bg-base">
    <div class="absolute top-0 right-0 p-4">
      <ThemeChanger />
    </div>
    <div class="text-center">
      <p class="font-semibold text-secondary">404</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight sm:text-5xl text-accent">Page not found</h1>
      <p class="mt-6 text-base font-semibold leading-7 text-balance">Sorry, we couldn't find the page you're looking for.</p>
      <div class="flex items-center justify-center mt-10 gap-x-6">
        <a href="/" class="btn btn-secondary">
          Go back home
        </a>
      </div>
    </div>
  </main>
</Layout>