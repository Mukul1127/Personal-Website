interface Props {
  name: string;
  description: string;
  year: string;
  url?: string;
}

const { name, description, year, url } = Astro.props;

import linkout from "@/assets/linkout.svg?raw";
---

<div class="w-full card max-w-96 bg-neutral text-neutral-content">
  <div class="card-body">
    <div class="flex items-center justify-between">
      <h2 class="text-2xl font-extrabold card-title">{ name }</h2>
      <div class="font-semibold badge badge-accent">{ year }</div>
    </div>
    <p class="text-balance">{ description }</p>
    { url ?
    <div class="justify-end card-actions">
      <a href={ url } target="_blank" class="flex items-center gap-2 btn btn-primary">
        See it
        <div class="w-4 h-4">
          <Fragment set:html={ linkout } />
        </div>
      </a>
    </div> 
    : "" }
  </div>
</div>