const { image, name, amount,  percentage } = Astro.props;
---

<div class="w-[21rem] bg-neutral text-neutral-content rounded-box hover:scale-105 transition-transform">
  <div class="px-4 py-3 flex justify-between">
    <div class="flex items-center gap-2">
      <div class="grid place-items-center h-8 w-8">
        <Fragment set:html={ image } />
      </div>
      <h1 class="font-bold text-3xl">{ name }</h1>
    </div>
    <div class="flex flex-col">
      <p class="font-semibold">{ amount }</p>
      <progress class="progress progress-accent w-20 h-2.5 bg-base-100" value={ percentage } max="100"></progress>
    </div>
  </div>
</div>