import { Image } from "astro:assets";

const { image, name, amount,  percentage } = Astro.props;
---

<div class="w-full h-fit px-6 py-3 bg-gray-700 border border-gray-100 rounded-full shadow-xl hover:scale-105 transition-transform dark:bg-gray-900 dark:border-gray-800 grid grid-flow-col justify-between gap-10">
  <div class="flex gap-2 items-center">
    <Image src={ image } alt={ `${name} Logo` } class="!w-8 h-8 aspect-square" />
    <h1 class="font-bold text-3xl text-white">{ name }</h1>
  </div>
  <div>
    <p class="font-semibold text-white">{ amount }</p>
    <div class="w-full rounded-full h-2.5 bg-gray-500 dark:bg-gray-600">
      <div class="bg-red-400 h-2.5 rounded-full" style={ `width: ${percentage}%` }></div>
    </div>
  </div>
</div>