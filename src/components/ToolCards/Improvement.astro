interface Props {
  label: string;
  src: string;
  fromLevel: string;
  toLevel: string;
}

const { label, src, fromLevel, toLevel } = Astro.props;

const images = import.meta.glob("/src/assets/**/*.svg", { query: "?raw", import: "default" });
---

<li class="list-row">
  <div set:html={(images[src] ?? (() => Promise<unknown>))()} class="size-10" />
  <div>
    <div class="font-bold">{label}</div>
    <div class="text-xs font-medium opacity-60">{`${fromLevel} -> ${toLevel}`}</div>
  </div>
</li>
